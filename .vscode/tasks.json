// .vscode/tasks.json
{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "npm: start",
		"type": "shell",
		"command": "npm.cmd",
		"args": ["run", "start"],
		"group": "build",
		"isBackground": true,
		"problemMatcher": [
		  "$ng-cli"   
		],
		"presentation": {
		  "echo": true,
		  "reveal": "always",
		  "focus": false,
		  "panel": "shared",
		  "showReuseMessage": true,
		  "clear": false
		},
		"detail": "Run Angular dev server with proper ready detection"
	  },
	  {
		"label": "terminateAll",
		"type": "shell",
		"command": "taskkill",
		"args": ["/F", "/IM", "node.exe"],
		"windows": {
		  "command": "taskkill",
		  "args": ["/F", "/IM", "node.exe"]
		},
		"problemMatcher": []
	  }
	]
  }