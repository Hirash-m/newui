{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Angular with npm.cmd",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "D:/node/node-v22.16.0-win-x64/npm.cmd",
      "runtimeArgs": ["run", "start"],
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:/*": "${workspaceFolder}/*",
        "/*": "${workspaceFolder}/*"
      },
      "port": 9229,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Compiled successfully",
        "uriFormat": "http://localhost:4300"
      }
    }
  ]
}